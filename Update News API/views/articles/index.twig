<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>News API</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/styles.css">
</head>
<body style="background: #B9E0FF">



<div class="form-div">
    <form class="search" action="/" method="get">
        <label>
            <input class="input" type="text" placeholder=" search..." name="search">
        </label>
        <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
           Button
        </button>
    </form>
</div>
<div class="Links">
    <a href="/?search=politics"> Politics </a>|
    <a href="/?search=wild animals"> Wild animals </a>|
    <a href="/?search=active live"> Active live </a>|
    <a href="/?search=Football championships">Football Championships </a>|
</div>

    <div class="container my-12 mx-auto px-4 md:px-12">
        <div class="flex flex-wrap -mx-1 lg:-mx-4">

            {% for article in articles %}
                <!-- Column -->
                <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">

                    <!-- Article -->
                    <article class="overflow-hidden rounded-lg shadow-lg">

                        <a href="{{ article.getUrl }}" target="_blank">
                            <img alt="Placeholder" class="block h-auto w-full" src="{{ article.getPicture }}">
                        </a>

                        <header class="flex items-center justify-between leading-tight p-2 md:p-4">
                            <h1 class="text-lg">
                                <a class="no-underline hover:underline text-black" target="_blank" href="{{ article.getUrl }}">
                                    {{ article.getTitle }}
                                </a>
                            </h1>
                        </header>

                        <footer class="flex items-center justify-between leading-none p-2 md:p-4">
                            {{ article.getPublishedAt }}
                        </footer>

                    </article>
                    <!-- END Article -->

                </div>
                <!-- END Column -->
            {% endfor %}
        </div>
    </div>

</body>
</html>


